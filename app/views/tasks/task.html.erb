<h2><%= @task.title %></h2>
<%= link_to "Edit", task_edit_path %>
<p><%= @task.details %></p>
<p><%= @task.completed ? "You have completed this task" : "This task has yet to be completed" %></p>
<%= link_to "Delete", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Sure?"} %>
<%= link_to "Back to the list", tasks_path %>
